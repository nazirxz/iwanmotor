<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Inventory.ListItemTextView" parent="Widget.MaterialComponents.TextView">
        <user name="android:gravity">center_vertical</user>
        <user name="android:layout_height">48dp</user>
        <user name="android:textAppearance">?attr/textAppearanceBody1</user>
    </style>

    <style name="Widget.Inventory.TextView" parent="Widget.MaterialComponents.TextView">
        <user name="android:textSize">16sp</user>
        <user name="android:layout_height">wrap_content</user>
        <user name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</user>
    </style>

    <style name="Widget.Inventory.Header" parent="Widget.MaterialComponents.TextView">
        <user name="android:gravity">center_vertical</user>
        <user name="android:textSize">8sp</user>
        <user name="android:layout_marginTop">8dp</user>
        <user name="android:layout_width">wrap_content</user>
        <user name="android:layout_height">wrap_content</user>
        <user name="android:textAppearance">?attr/textAppearanceOverline</user>
    </style>

    <style name="Divider">
        <user name="android:layout_width">match_parent</user>
        <user name="android:layout_height">1dp</user>
        <user name="android:background">?android:attr/listDivider</user>
    </style>

    <style name="Widget.Inventory.TextInputLayout.OutlinedBox"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <user name="boxStrokeErrorColor">@color/blue_green</user>
        <user name="errorIconTint">@color/blue</user>
        <user name="errorTextColor">@color/blue</user>
        <user name="errorIconDrawable">@android:drawable/stat_notify_error</user>
        <user name="helperTextTextAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </user>
    </style>
</resources>